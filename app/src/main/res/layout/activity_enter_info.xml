<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="bytebeast.giftbot.EnterInfo">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

    <ImageView android:id="@+id/img_enter_contact"
        android:src="@drawable/testicon3"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:onClick="selectImage"
        />

        <TextView
            android:id="@+id/imgHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_enter_contact"
            android:text="Tap to change!"
            android:textSize="14sp"
            />

    <EditText android:id="@+id/contact_enter_name"
        android:background="@drawable/border"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="26sp"
        android:inputType="textMultiLine|textCapSentences"
        android:hint="Name"
        android:layout_toRightOf="@id/img_enter_contact"
        android:layout_marginRight="20dp"
        />

    <EditText android:id="@+id/contact_ideas"
        android:background="@drawable/border"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="26sp"
        android:inputType="textMultiLine|textCapSentences"
        android:hint="Gift ideas"
        android:layout_below="@id/contact_enter_name"
        android:layout_toRightOf="@id/img_enter_contact"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        />


    <Button
        android:layout_below="@id/contact_ideas"
        android:layout_toRightOf="@id/img_enter_contact"
        android:id="@+id/confirmAdd"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Add"
        android:onClick="addContact"
        />

    </RelativeLayout>


</ScrollView>