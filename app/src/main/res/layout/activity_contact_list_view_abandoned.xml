<?xml version="1.0" encoding="utf-8"?>
<!-- @res/layout/main.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/robotsearch">

    <Button
        android:id="@+id/contact_select_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select a Contact"
        android:onClick="onClickSelectContact" />

    <ListView
        android:layout_below="@id/contact_select_button"
        android:id="@+id/contactAddList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ghoul"
        android:layout_marginBottom="5dp"/>

    <ImageView android:id="@+id/img_contact"
        android:layout_height="73dp"
        android:layout_width="73dp"
        android:layout_below="@id/contact_select_button"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        />

    <TextView android:id="@+id/contact_name"
        android:background="@drawable/border"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="32sp"
        android:layout_toRightOf="@id/img_contact"
        android:layout_below="@id/contact_select_button"
        android:layout_centerVertical="true"
        />


</RelativeLayout>